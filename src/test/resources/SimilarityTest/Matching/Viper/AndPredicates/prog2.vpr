field f: Int

method inc(x: Ref, i: Int)
  requires acc(x.f)
  ensures  acc(x.f)
  ensures  x.f == old(x.f) + i
{
  x.f := x.f + i
}

method client(a: Ref, b: Ref) {
  inhale acc(a.f) && acc(b.f)

  a.f := 1
  b.f := 3

  //inc(a, 3)
  copyAndInc(a, b)

  assert b.f == 3
  assert a.f == 4
}

method copyAndInc(x: Ref, y: Ref)
  requires acc(x.f) && acc(y.f)
  ensures acc(x.f) && acc(y.f) && x.f == old(y.f) + 1 && y.f == old(y.f)
{
  x.f := y.f + 1
}